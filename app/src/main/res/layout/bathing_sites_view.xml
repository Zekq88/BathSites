<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/badplats_symbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="visible"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/badplatser_textVeiw2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        app:srcCompat="@drawable/ic_pool"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/badplatser_textVeiw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="@string/antal_badplatser"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/badplats_symbol2"
        tools:visibility="visible" />

</LinearLayout>